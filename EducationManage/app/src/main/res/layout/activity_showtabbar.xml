<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    tools:context=".ShowTabbarActivity"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout

        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight = "1"
        android:background="#fafafa">


    </FrameLayout>

    <LinearLayout
        android:id="@+id/content"
        android:background="@color/colortabbarbackgruod"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/add_layout"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/add_iv"
                android:layout_marginTop="5dp"
                android:src="@drawable/tabbar_add"
                android:layout_gravity="center_horizontal"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/add_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colortabbartextcolor"
                android:text="添加成员"
                android:layout_gravity="center_horizontal"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
               />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/charge_layout"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/charge_iv"
                android:layout_marginTop="5dp"
                android:src="@drawable/tabbar_money"
                android:layout_gravity="center_horizontal"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/charge_tv"
                android:textColor="@color/colortabbartextcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="收费"
                android:layout_gravity="center_horizontal"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/waring_layout"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/warning_iv"
                android:layout_marginTop="5dp"
                android:src="@drawable/tabbar_warning"
                android:layout_gravity="center_horizontal"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/warning_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colortabbartextcolor"
                android:text="预警"
                android:layout_gravity="center_horizontal"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
   


    </LinearLayout>






</LinearLayout>


